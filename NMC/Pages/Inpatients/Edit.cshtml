@page "{id:int?}"
@model NMC.Pages.Inpatients.EditModel


@inject IViewLocalizer _localizer

@{
    ViewData["Title"] = _localizer["Edit"];
}


<partial name="_SidebarDetails" model="Model.Entity" />

<div class="page-wrapper">
    <div class="content">
        <!-- Header -->
        <div class="row">
            <div class="col-sm-5 col-5">
                <h4 class="page-title">@_localizer["Edit"]# <span class="h3 font-weight-bolder text-info">@Model.Entity.Id</span></h4>
            </div>
        </div>

        <!-- Body -->
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="row mb-3">
                <div class="col-md-12">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>@_localizer["Error!"]</strong> @_localizer[ViewBag.ErrorMessage]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="IsEmergency"> @Html.DisplayNameFor(x => Model.IsEmergency)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="IsAccident"> @Html.DisplayNameFor(x => Model.IsAccident)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PoliceRef" class="col-form-label"></label>
                        <input asp-for="PoliceRef" class="form-control" />
                        <span asp-validation-for="PoliceRef" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="HasCompanion"> @Html.DisplayNameFor(x => Model.HasCompanion)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="DoctorId" class="col-form-label"></label>
                        <select asp-for="DoctorId" asp-items="Model.SelectDoctor" class="form-control" ></select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    <div class="m-t-20">
                        <button type="submit" class="btn btn-primary">@_localizer["Save"]</button>
                        <a href="@Model.ReturnUrl" class="btn btn-secondary ml-1">@_localizer["Return"]</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Body -->

    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

}
