
@page "{DoctorId:int}"
@model NMC.Pages.Doctors.Education.IndexModel

@inject IViewLocalizer _localizer
@functions
{
    string PageTitle = "Doctor Education";

}

<partial name="_Sidebar" />

<div class="page-wrapper">

<div class="content">

    <div class="row">
        <div class="col-sm-5 col-5">
            <h4 class="page-title">@_localizer[PageTitle]</h4>
        </div>
        <div class="col-sm-7 col-7 text-right m-b-30">
            <a asp-page="./Create" asp-route-DoctorId="@Model.DoctorId" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> @_localizer["Create"]</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table mb-0 datatable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Doctor.Name)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().StartingYear)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().CompletionYear)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Degree)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Institution)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Grade)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Subject)</th>
                            <th class="text-right">@_localizer["Action"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td scope="row">@item.Doctor.Name</td>
                                <td>@item.StartingYear</td>
                                <td>@item.CompletionYear</td>
                                <td>@item.Degree</td>
                                <td>@item.Institution</td>
                                <td>@item.Grade</td>
                                <td>@item.Subject</td>
                                @*<td><span class="custom-badge status-green">Active</span></td>*@
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> @_localizer["Edit"]</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
</div>

