@inject IViewLocalizer _localizer

<div class="sidebar" id="sidebar">
    <div class="sidebar-inner slimscroll">
        <div id="sidebar-menu" class="sidebar-menu">
            <ul>
                <li class="menu-title">@_localizer["Main"]</li>
                <li class="@(ViewBag.ActivePage == ActivePage.Dashboard ? "active" : "")">
                    <a asp-page="/Index"><i class="fa fa-dashboard"></i> <span>@_localizer["Dashboard"]</span></a>
                </li>
                <li class="@(ViewBag.ActivePage == ActivePage.Doctors ? "active" : "")">
                    <a asp-page="/Parties/Index" asp-route-roleType="doctor" asp-route-partyType="P"><i class="fa fa-user-md"></i> <span>@_localizer["Doctors"]</span></a>
                </li>
                <li class="@(ViewBag.ActivePage == ActivePage.InPatients ? "active" : "")">
                    <a asp-page="/Parties/Index" asp-route-roleType="in-patient" asp-route-partyType="P"><i class="fa fa-wheelchair"></i> <span>@_localizer["In-Patients"]</span></a>
                </li>
                <li class="@(ViewBag.ActivePage == ActivePage.OutPatients ? "active" : "")">
                    <a asp-page="/Parties/Index" asp-route-roleType="out-patient" asp-route-partyType="P"><i class="fa fa-wheelchair"></i> <span>@_localizer["Out-Patients"]</span></a>
                </li>
                <li class="@(ViewBag.ActivePage == ActivePage.Departments ? "active" : "")">
                    <a asp-page="/Parties/Index" asp-route-roleType="dept" asp-route-partyType="O"><i class="fa fa-hospital-o"></i> <span>@_localizer["Departments"]</span></a>
                </li>
            </ul>
        </div>
    </div>
</div>