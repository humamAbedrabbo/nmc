@inject IViewLocalizer _localizer

<div class="header">
    <div class="header-left">
        <a href="/" class="logo">
            <img src="~/assets/img/logo2.jpg" width="35" height="35" alt=""> <span>@_localizer["NMC"]</span>
        </a>
    </div>
    <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
    <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
    <ul class="nav user-menu float-right">
        @*<partial name="_NotificationIcons" />*@
        <li class="nav-item dropdown has-arrow">
            <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                <span class="user-img">
                    <img class="rounded-circle" src="~/assets/img/user.jpg" width="24" alt="Admin">
                    <span class="status online"></span>
                </span>
                <span>@User.Identity.Name</span>
            </a>
            <div class="dropdown-menu">
                <form method="post" id="chnageLang" class="form-inline" asp-page="/Index">
                    <input name="lang" value="en" type="hidden" />
                    <button id="logout" type="submit" class="dropdown-item">English</button>
                </form>
                <form method="post" id="chnageLang" class="form-inline" asp-page="/Index">
                    <input name="lang" value="ar" type="hidden" />
                    <button id="logout" type="submit" class="dropdown-item">@_localizer["Arabic"]</button>
                </form>
                <a class="dropdown-item" href="#">@_localizer["My Profile"]</a>
                <a class="dropdown-item" href="#">@_localizer["Edit Profile"]</a>
                <a class="dropdown-item" href="#">@_localizer["Settings"]</a>
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button id="logout" type="submit" class="dropdown-item">@_localizer["Logout"]</button>
                </form>
            </div>
        </li>
    </ul>

    <div class="dropdown mobile-user-menu float-right">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
        <div class="dropdown-menu dropdown-menu-right">
            <form method="post" id="chnageLang" class="form-inline" asp-page="/Index">
                <input name="lang" value="en" type="hidden" />
                <button id="logout" type="submit" class="dropdown-item">@_localizer["English"]</button>
            </form>
            <form method="post" id="chnageLang" class="form-inline" asp-page="/Index">
                <input name="lang" value="ar" type="hidden" />
                <button id="logout" type="submit" class="dropdown-item">@_localizer["Arabic"]</button>
            </form>
            <a class="dropdown-item" href="#">@_localizer["My Profile"]</a>
            <a class="dropdown-item" href="#">@_localizer["Edit Profile"]</a>
            <a class="dropdown-item" href="#">@_localizer["Settings"]</a>
            <a class="dropdown-item" href="#">@_localizer["Logout"]</a>
        </div>
    </div>
</div>