@page
@model NMC.Pages.Rooms.AddRoomModel
@inject IViewLocalizer _localizer
@{
    ViewData["PageTitle"] = _localizer["Add Room"];
}

<div class="content">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h4 class="page-title">@_localizer["Add Room"]</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Room.RoomNo"></label>
                    <input asp-for="Room.RoomNo" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Room.FloorNo"></label>
                    <input asp-for="Room.FloorNo" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Room.RoomTypeId"></label>
                    <select asp-for="Room.RoomTypeId" asp-items="Model.RoomTypesSelect" class="form-control">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Room.RoomGradeId"></label>
                    <select asp-for="Room.RoomGradeId" asp-items="Model.RoomGradesSelect" class="form-control">
                        <option value=""></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Room.BedCount"></label>
                    <input asp-for="Room.BedCount" class="form-control">
                </div>
                <div class="form-group">
                    <label class="display-block">@_localizer["Status"]</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Room.Available" id="room_available" value="True" checked>
                        <label class="form-check-label" for="room_available">
                            @_localizer["Available"]
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Room.Available" id="room_notAvailable" value="False">
                        <label class="form-check-label" for="room_notAvailable">
                            @_localizer["Not Available"]
                        </label>
                    </div>
                </div>
                <div class="m-t-20 text-center">
                    <button class="btn btn-primary submit-btn">@_localizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>