@page
@model NMC.Areas.Admin.Pages.Doctors.IndexModel
@{
    ViewData["PageTitle"] = _localizer["Doctors"];

}

<div class="content">
    <div class="row">
        <div class="col-sm-5 col-5">
            <h4 class="page-title">@ViewBag.PageTitle</h4>
        </div>
        <div class="col-sm-7 col-7 text-right m-b-30">
            <a asp-page="./Create" 
               class="btn btn-primary btn-rounded">
                <i class="fa fa-plus"></i> 
                @_localizer["Create"]
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table mb-0 datatable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Html.DisplayNameFor(p => p.Doctors.FirstOrDefault().Name)</th>
                            <th>@Html.DisplayNameFor(p => p.Doctors.FirstOrDefault().Title)</th>
                            <th>@Html.DisplayNameFor(p => p.Doctors.FirstOrDefault().DoctorType)</th>
                            <th>@Html.DisplayNameFor(p => p.Doctors.FirstOrDefault().Surgeon)</th>
                            <th>@Html.DisplayNameFor(p => p.Doctors.FirstOrDefault().Phone)</th>
                            <th class="text-right">@_localizer["Action"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.Doctors)
                        {
                            <tr>
                                <td>@obj.Id</td>
                                <td>@obj.Name</td>
                                <td>@obj.Title</td>
                                <td>@_localizer[obj.DoctorType.ToString()]</td>
                                <td>@_localizer[obj.Surgeon.ToString()]</td>
                                <td>@obj.Phone @obj.Mobile</td>
                                <td class="text-right">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@obj.Id"><i class="fa fa-pencil m-r-5"></i> @_localizer["Edit"]</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>