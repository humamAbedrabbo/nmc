@page "{DoctorId:int}"
@using System.Linq
@functions
{
    string PageTitle = "Doctor Schedule";

    public IEnumerable<DoctorSchedule> Items { get; set; }
    [BindProperty(SupportsGet = true)] public int DoctorId { get; set; }

    public async Task OnGetAsync()
    {

        Items = await _ctx.DoctorSchedules
            .Include(x => x.Doctor)
            .Where(x => x.DoctorId == DoctorId)
            .OrderByDescending(x => x.FromDate)
            .AsNoTracking()
            .ToListAsync();
    }
}



<div class="content">

    <div class="row">
        <div class="col-sm-5 col-5">
            <h4 class="page-title">@_localizer[PageTitle]</h4>
        </div>
        <div class="col-sm-7 col-7 text-right m-b-30">
            <a asp-page="./Create" asp-route-DoctorId="@DoctorId" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> @_localizer["Create"]</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped custom-table mb-0 datatable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Doctor.Name)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().FromDate)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().ThruDate)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Timing)</th>
                            <th>@Html.DisplayNameFor(p => p.Items.FirstOrDefault().Days)</th>
                            <th class="text-right">@_localizer["Action"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                        <tr>
                            <td scope="row">@item.Doctor.Name</td>
                            <td><date value="item.FromDate" format="yyyy-MMM-dd"></date></td>
                            <td><date value="item.ThruDate" format="yyyy-MMM-dd"></date></td>
                            <td>@item.Timing</td>
                            <td>
                                @foreach (var d in item.DaysList)
                                {
                                    <span class="custom-badge status-green">@_localizer[d]</span>
                                }
                            </td>
                            @*<td><span class="custom-badge status-green">Active</span></td>*@
                            <td class="text-right">
                                <div class="dropdown dropdown-action">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-pencil m-r-5"></i> @_localizer["Edit"]</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>