@page
@model NMC.Areas.Admin.Pages.Bookings.CreateModel
@{
    ViewData["PageTitle"] = _localizer["Create Booking"];
}

<div class="content">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h4 class="page-title">@ViewBag.PageTitle</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <form method="post">

                <div class="form-group">
                    <label asp-for="Booking.Name"></label>
                    <input asp-for="Booking.Name" class="form-control">
                    <span asp-validation-for="Booking.Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.PatientFirstName"></label>
                    <input asp-for="Booking.PatientFirstName" class="form-control">
                    <span asp-validation-for="Booking.PatientFirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.PatientLastName"></label>
                    <input asp-for="Booking.PatientLastName" class="form-control">
                    <span asp-validation-for="Booking.PatientLastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.Gender"></label>
                    <select asp-for="Booking.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                    <span asp-validation-for="Booking.Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.Phone"></label>
                    <input asp-for="Booking.Phone" class="form-control" />
                    <span asp-validation-for="Booking.Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.DoctorId"></label>
                    <select asp-for="Booking.DoctorId" asp-items="Model.DoctorsSelect" class="form-control"></select>
                    <span asp-validation-for="Booking.DoctorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Booking.WardId"></label>
                    <select asp-for="Booking.WardId" asp-items="Model.WardsSelect" class="form-control"></select>
                    <span asp-validation-for="Booking.WardId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.Notes"></label>
                    <textarea asp-for="Booking.Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Booking.Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.DownPayment"></label>
                    <input asp-for="Booking.DownPayment" class="form-control" />
                    <span asp-validation-for="Booking.DownPayment" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.From"></label>
                    <input asp-for="Booking.From" class="form-control" />
                    <span asp-validation-for="Booking.From" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Booking.To"></label>
                    <input asp-for="Booking.To" class="form-control" />
                    <span asp-validation-for="Booking.To" class="text-danger"></span>
                </div>

                <div class="m-t-20 text-center">
                    <button class="btn btn-primary submit-btn">@_localizer["Save"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
{
<partial name="_ValidationScriptsPartial" />

}