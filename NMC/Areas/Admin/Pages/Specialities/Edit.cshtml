@page "{id:int}"
@functions
{
    string PageTitle = "Edit Speciality";

    [BindProperty] public Speciality Item { get; set; }
    [BindProperty(SupportsGet = true)] public int? Id { get; set; }

    public async Task<IActionResult> OnGetAsync()
    {
        if (!Id.HasValue)
            return RedirectToPage("/NotFound");

        Item = await _ctx.Specialities.Where(x => x.Id == Id).FirstOrDefaultAsync();
        if (Item == null)
            return RedirectToPage("/NotFound");

        return Page();
    }

    public async Task<IActionResult> OnPostAsync()
    {
        if(ModelState.IsValid)
        {
            try
            {
                _ctx.Attach(Item);
                _ctx.Specialities.Update(Item);
                await _ctx.SaveChangesAsync();
                return RedirectToPage("./Index");
            }
            catch
            {
                ModelState.AddModelError("Name", "Invalid");
            }
        }

        return Page();
    }
}

<div class="content">

    <div class="row">
        <div class="col-sm-5 col-5">
            <h4 class="page-title">@_localizer[PageTitle]</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form method="post">
                <div class="card-box">
                    <div class="card-body">
                        <h3 class="card-title">@_localizer["Speciality Details"]</h3>
                        
                        <input asp-for="Item.Id" type="hidden" />
                        
                        <div class="form-group">
                            <label asp-for="Item.Code" class="col-form-label"></label>
                            <input asp-for="Item.Code" class="form-control col-md-3" />
                            <span asp-validation-for="Item.Code" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Item.Name" class="col-form-label"></label>
                            <input asp-for="Item.Name" class="form-control" />
                            <span asp-validation-for="Item.Name" class="text-danger"></span>
                        </div>

                        <div class="m-t-20 text-center">
                            <button type="submit" class="btn btn-primary submit-btn">@_localizer["Save"]</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}