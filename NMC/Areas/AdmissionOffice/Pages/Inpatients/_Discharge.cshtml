@model Inpatient

<div class="row">
    <div class="col-md-12">
        <div class="card-box">
            <div class="card-body">
                <ul class="list-group list-group-flush">

                    <li class="list-group-item">
                        <strong>
                            @_localizer["Discharge Type"]
                        </strong>
                        <span class="ml-2"></span>
                        <span hidden="@(!Model.Healing)" class="custom-badge status-blue mx-1">@_localizer[nameof(Inpatient.Healing)]</span>
                        <span hidden="@(!Model.Improvement)" class="custom-badge status-blue mx-1">@_localizer[nameof(Inpatient.Improvement)]</span>
                        <span hidden="@(!Model.Ill)" class="custom-badge status-blue mx-1">@_localizer[nameof(Inpatient.Ill)]</span>
                        <span hidden="@(!Model.Death)" class="custom-badge status-blue mx-1">@_localizer[nameof(Inpatient.Death)]</span>
                    </li>

                    <li class="list-group-item">
                        <strong>
                            @_localizer["Discharge Date"]
                        </strong>
                        <span class="ml-2"></span>
                        <span hidden="@(!Model.DischargedOn.HasValue)"><date value="Model.DischargedOn" format="dddd, dd-MMM-yyyy HH:mm"></date></span>
                    </li>

                    <li class="list-group-item">
                        <strong>
                            @_localizer["Ward"]
                        </strong>
                        <span class="ml-2"></span>
                        <span>@Model.Ward?.Name</span>
                    </li>
                    
                    <li class="list-group-item">
                        <strong>
                            @_localizer["Room"]
                        </strong>
                        <span class="ml-2"></span>
                        <span>@Model.Room?.Name</span>
                    </li>

                </ul>


            </div>
        </div>
    </div>
</div> 